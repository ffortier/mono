{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "commitMessagePrefix": "deps: ",
    "postUpgradeTasks": {
        "commands": [
            "./.github/renovate/post-upgrade.sh"
        ],
        "executionMode": "branch"
    },
    "pip_requirements": {
        "managerFilePatterns": [
            "/third_party/python/requirements.in/"
        ]
    },
    "bazel-module": {
        "managerFilePatterns": [
            "/\\bMODULE\\.bazel$/"
        ]
    },
    "bazel": {
        "managerFilePatterns": [
            "/\\bMODULE\\.bazel$/",
            "/\\.bzl$/"
        ]
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "automerge": true
        },
        {
            "matchPackageNames": [
                "esbuild",
                "@esbuild/**"
            ],
            "groupName": "esbuild monorepo"
        },
        {
            "matchPackageNames": [
                "/^buildifier.*/"
            ],
            "groupName": "buildifier monorepo"
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "datasourceTemplate": "crate",
            "managerFilePatterns": [
                "/\\bMODULE\\.bazel$/"
            ],
            "matchStringsStrategy": "any",
            "matchStrings": [
                "crate\\.spec\\([^)]*?\\bpackage[\\s\\n]*=[\\s\\n]*?\"(?<depName>[^\"]+)\"[^)]*?\\bversion[\\s\\n]*=[\\s\\n]*?\"(?<currentValue>[^\"]+)\""
            ]
        },
        {
            "customType": "regex",
            "datasourceTemplate": "maven",
            "managerFilePatterns": [
                "/\\bMODULE\\.bazel$/"
            ],
            "matchStringsStrategy": "recursive",
            "matchStrings": [
                "maven\\.install\\(([^)]*)\\)",
                "artifacts\\s+=\\s+\\[([^]]*)]",
                "\"(?<depName>[^:\"]+:[^:\"]+):(?<currentValue>[^:\"]+)\""
            ]
        },
        {
            "customType": "regex",
            "datasourceTemplate": "git-refs",
            "depNameTemplate": "nixpkgs",
            "packageNameTemplate": "https://github.com/NixOS/nixpkgs",
            "versioningTemplate": "nixpkgs",
            "managerFilePatterns": [
                "/\\bshell\\.nix$/"
            ],
            "matchStrings": [
                "https:\\/\\/github\\.com\\/NixOS\\/nixpkgs\\/archive\\/(?<currentValue>[a-z0-9-.]+)\\.tar\\.gz"
            ]
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/paket.dependencies/"
            ],
            "matchStringsStrategy": "any",
            "matchStrings": [
                "nuget (?<depName>.+?) (?<currentValue>.+)"
            ],
            "datasourceTemplate": "nuget",
            "versioningTemplate": "nuget"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\bdeno.jsonc\\b/"
            ],
            "matchStringsStrategy": "any",
            "matchStrings": [
                "\"jsr:@.*?@(?<currentValue>.*?)\"\\s*,?\\s*//\\s*(?<depName>@jsr/.*)",
            ],
            "datasourceTemplate": "npm",
            "versioningTemplate": "npm",
            "depTypeTemplate": "dependencies",
            "registryUrlTemplate": "https://npm.jsr.io"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/\\bdeno.jsonc\\b/"
            ],
            "matchStringsStrategy": "any",
            "matchStrings": [
                "\"npm:(?<depName>.+?)@(?<currentValue>.*?)\""
            ],
            "datasourceTemplate": "npm",
            "versioningTemplate": "npm",
            "depTypeTemplate": "dependencies",
            "registryUrlTemplate": "https://registry.npmjs.org"
        }
    ]
}
