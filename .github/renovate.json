{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "commitMessagePrefix": "deps: ",
    "postUpgradeTasks": {
        "commands": [
            "./.github/renovate/post-upgrade.sh"
        ],
        "executionMode": "branch"
    },
    "pip_requirements": {
        "fileMatch": [
            "third_party/python/requirements.in"
        ]
    }
}
