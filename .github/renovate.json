{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "commitMessagePrefix": "deps: ",
    "postUpgradeTasks": {
        "commands": [
            "./.github/renovate/post-upgrade.sh"
        ],
        "executionMode": "branch"
    },
    "pip_requirements": {
        "fileMatch": [
            "third_party/python/requirements.in"
        ]
    },
    "bazel-module": {
        "fileMatch": [
            "\\bMODULE\\.bazel$"
        ]
    },
    "bazel": {
        "fileMatch": [
            "\\bMODULE\\.bazel$",
            "\\.bzl$"
        ]
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "automerge": true
        }
    ],
    "automergeStrategy": "fast-forward",
    "customManagers": [
        {
            "customType": "regex",
            "datasourceTemplate": "crate",
            "fileMatch": [
                "\\bMODULE\\.bazel$"
            ],
            "matchStringsStrategy": "any",
            "matchStrings": [
                "crate\\.spec\\([^)]*?\\bpackage[\\s\\n]*=[\\s\\n]*?\"(?<depName>[^\"]+)\"[^)]*?\\bversion[\\s\\n]*=[\\s\\n]*?\"(?<currentValue>[^\"]+)\""
            ]
        },
        {
            "customType": "regex",
            "datasourceTemplate": "maven",
            "fileMatch": [
                "\\bMODULE\\.bazel$"
            ],
            "matchStringsStrategy": "recursive",
            "matchStrings": [
                "maven\\.install\\(([^)]*)\\)",
                "artifacts\\s+=\\s+\\[([^]]*)]",
                "\"(?<depName>[^:\"]+:[^:\"]+):(?<currentValue>[^:\"]+)\""
            ]
        },
        {
            "customType": "regex",
            "datasourceTemplate": "git-refs",
            "depNameTemplate": "nixpkgs",
            "packageNameTemplate": "https://github.com/NixOS/nixpkgs",
            "versioningTemplate": "nixpkgs",
            "fileMatch": [
                "\bshell\\.nix$"
            ],
            "matchStrings":[
                "https:\\/\\/github\\.com\\/NixOS\\/nixpkgs\\/archive\\/(?<currentValue>[a-z0-9-.]+)\\.tar\\.gz"
            ]
        }
    ]
}