bazel_dep(name = "toolchains_llvm", version = "1.5.0")
bazel_dep(name = "rules_cc", version = "0.2.17")

# Fixes https://github.com/bazel-contrib/toolchains_llvm/issues/547
git_override(
    module_name = "toolchains_llvm",
    commit = "a104ed52ce3d531b3fb3c078a6d5a306088265c2",
    remote = "https://github.com/bazel-contrib/toolchains_llvm",
)

llvm = use_extension("@toolchains_llvm//toolchain/extensions:llvm.bzl", "llvm")
llvm.toolchain(
    compile_flags = {
        "wasm32": [
            "--target=wasm32-unknown-unknown",
            "-nostdlib",
            "-nostdinc",
            "-fcolor-diagnostics",
            "-Wall",
            "-Wthread-safety",
            "-Wself-assign",
        ],
    },
    cxx_standard = {
        "": "c++20",
    },
    llvm_version = "20.1.1",
    stdlib = {
        "wasm32": "none",
    },
)
llvm.sysroot(
    label = "@sysroots_bullseye_amd64//:sysroot",
    targets = ["linux-x86_64"],
)
llvm.sysroot(
    label = "@sysroots_bullseye_arm64//:sysroot",
    targets = ["linux-aarch64"],
)
llvm.sysroot(
    label = "@sysroot_darwin_universal//:sysroot",
    targets = [
        "darwin-x86_64",
        "darwin-aarch64",
    ],
)
llvm.sysroot(
    label = "@//third_party/cpp/empty",
    targets = ["wasm32"],
)
llvm.toolchain(
    name = "llvm_rbe_linux_amd64",
    compile_flags = {
        "wasm32": [
            "--target=wasm32-unknown-unknown",
            "-nostdlib",
            "-nostdinc",
            "-fcolor-diagnostics",
            "-Wall",
            "-Wthread-safety",
            "-Wself-assign",
        ],
    },
    cxx_standard = {
        "": "c++20",
    },
    distribution = "LLVM-20.1.1-Linux-X64.tar.xz",
    exec_arch = "amd64",
    exec_os = "linux",
    llvm_version = "20.1.1",
    stdlib = {
        "wasm32": "none",
    },
)
llvm.sysroot(
    name = "llvm_rbe_linux_amd64",
    label = "@sysroots_bullseye_amd64//:sysroot",
    targets = ["linux-x86_64"],
)
llvm.sysroot(
    name = "llvm_rbe_linux_amd64",
    label = "@//third_party/cpp/empty",
    targets = [
        "wasm32",
        "wasm64",
    ],
)
use_repo(llvm, "llvm_rbe_linux_amd64", "llvm_rbe_linux_amd64_llvm", "llvm_toolchain", "llvm_toolchain_llvm")

register_toolchains("@llvm_toolchain//:all", "//third_party/cpp:all")

sysroots = use_extension("//third_party/cpp:sysroots.bzl", "sysroots")
sysroots.install(
    targets = [
        "bullseye_amd64",
        "bullseye_arm64",
    ],
)
use_repo(sysroots, "sysroot_darwin_universal", "sysroots_bullseye_amd64", "sysroots_bullseye_arm64")

bazel_dep(name = "hedron_compile_commands")
git_override(
    module_name = "hedron_compile_commands",
    commit = "61f2d8f97cfcdcbf2f4ad504c1a093fbbe92ece2",
    remote = "https://github.com/hedronvision/bazel-compile-commands-extractor.git",
)