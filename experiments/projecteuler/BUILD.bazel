load("@aspect_rules_deno//deno:defs.bzl", "deno_binary")
load("@rules_cc//cc:cc_binary.bzl", "cc_binary")

[
    deno_binary(
        name = ts_file.removesuffix(".ts"),
        main = ts_file,
    )
    for ts_file in glob(["*.ts"])
]

[
    cc_binary(
        name = c_file.removesuffix(".c"),
        srcs = [c_file],
    )
    for c_file in glob(["*.c"])
]
